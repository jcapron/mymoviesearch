<% title "My Movie Search" %>

<%= form_tag root_path do %>
    <%= text_field_tag :search, params[:search], :placeholder => "Back to the Future" %>
    <%= submit_tag "Search", :class => "btn" %>
<% end %>

<% if params[:search] %>
	<h3 class="muted">Here are the results for "<%= params[:search] %>":</h3>

	<div class="text-left"></div>

	<div class="text-right">
    <iframe type="text/html" width="640" height="360" src=<%= @video_res.videos.first.embed_url %> ></iframe>
    </div>

<% end %>


   