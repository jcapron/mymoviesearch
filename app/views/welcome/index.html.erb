<% title "My Movie Search" %>

<%= form_tag root_path do %>
    <%= text_field_tag :search, params[:search], :placeholder => "Back to the Future" %>
    <%= submit_tag "Search", :class => "btn" %>
<% end %>

<% if params[:search] %>
	<h3 class="muted">Here are the results for "<%= params[:search] %>":</h3>
<% end %>
   
   