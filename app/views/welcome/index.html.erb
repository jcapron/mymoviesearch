<div class="hero-unit" style="margin-top: 25px">
	<h1 style="padding-bottom: 15px">My Movie Search</h1>



	<%= form_tag root_path do %>
	    <%= text_field_tag :search, params[:search], :value => @example %>
	    <%= submit_tag "Search", :class => "btn btn-primary" %>
	<% end %>

	<% if params[:search] %>

		<% if @bf_movies[0] %>
		   
